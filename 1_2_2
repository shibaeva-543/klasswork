# -*- coding: utf-8 -*-

import argparse
import sys


parser = argparse.ArgumentParser(
    description = 'Kalkulytor'
)

parser.add_argument(
    'values',
    metavar = 'VALUES',
    type = float,
    nargs = '2',
    help = 'входные данные'
)

parser.add_argument(
    '-a',
    '--action',
    metavar = 'Znak',
    type = str,
    action = 'store',
    help = 'znak'
)

parser.add_argument(
    '-v',
    '--verbose',
    action = 'store_true',
    help = 'vyvesti vyragenie'
)


args = parser.parse_args()

if not args.verbose and not args.action:
    print('--action or --verbose')
    file=sys.stderr
    sys.exit(-1)

if not args.action in ( '/', '*', '-', '+'):
    values = args.values
else:
    values = [x for x in args.values]

x = 0
y = 0

for v in values:
    x += v
    y += v

if  args.a is "*":
	print(x*y)
elif args.a is '/':
	print(x/y)
elif args.a is '-':
	print(x-y)
elif args.a is '+':
	print(x+y)
